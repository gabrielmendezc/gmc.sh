{
  "name": "root",
  "private": true,
  "scripts": {
    "clean-install": "npm run clean && npm run bootstrap",
    "clean": "npx lerna clean -y",
    "bootstrap": "npx lerna bootstrap",
    "dev": "lerna run dev --stream",
    "test": "lerna run test --stream",
    "test:ci": "lerna run test:ci --stream",
    "e2e": "lerna run e2e --stream",
    "lint": "lerna run lint --stream",
    "check-types": "lerna run check-types --stream",
    "pre-commit": "lerna run --concurrency 1 --stream pre-commit --since HEAD --exclude-dependents"
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  }
}
